{
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Debian_64",
      "name": "debian-7-cloudstack-x86_64",
      "vm_name": "debian-7-cloudstack-x86_64",
      "disk_size": 10140,
      "format": "ova",
      "headless": false,
      "http_directory": "http",
      "iso_checksum": "e7e9433973f082a297793c3c5010b2c5",
      "iso_checksum_type": "md5",
      "iso_url": "http://cdimage.debian.org/mirror/cdimage/archive/7.4.0/amd64/iso-cd/debian-7.4.0-amd64-netinst.iso",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; sh 'shutdown.sh'",
      "ssh_password": "password",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "boot_wait": "10s",
      "boot_command": [
        "<esc> auto url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg keymap=us debian-installer/keymap=us<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "../../scripts/common.sh",
      "destination": "/tmp/common.sh"
    },
    {
      "type": "file",
      "source": "../../files/debian/cloud.cfg",
      "destination": "/tmp/cloud.cfg"
    },
    {
      "type": "file",
      "source": "../../files/debian/cloud-set-guest-password.sh",
      "destination": "/tmp/cloud-set-guest-password.sh"
    },
    {
      "type": "shell",
      "scripts": [
        "../../scripts/cloudstack-debian.sh",
        "../../scripts/cleanup.sh",
        "../../scripts/zerodisk.sh"
      ]
    }
  ]
}
